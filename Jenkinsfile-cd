pipeline {
    agent any
    environment {
        EKS_TOKEN = credentials('eks-project1-cred')
    }
    stages{
        stage('Configure Kubernetes Access') {
                steps {
                    script {
                        sh '''
                        kubectl config set-credentials eks-user --token=$EKS_TOKEN
                
                        '''
                        
                    }
                }
            }
        stage('Checkout') {
            steps {
                git 'https://github.com/shovalaharoni99/k8s-project1'
            }
        }
        stage('Deploy Helm chart') {
            steps {
                sh "get ns"
                sh "helm install project1 ./project1-helm"
            }
        }
    }
}
